<div align="center">
    <%if @scope == "all"%>
        <h2>All Recipes:</h2>
    <%elsif @scope == "pantry"%>
        <h2>Recipes you can make with current pantry items:</h2>
    <%end%>
    <ol>
        <% @recipes.each do |recipe| %>
            <li>
                <a href="/recipes/<%=recipe.id%>"><%=recipe.name%></a>
            </li>
        <%end%>
    </ol>
    <br><br><br><a href="/recipes/new">Create New Recipe</a> | <a href="/recipes">Return to your Recipes</a>
    <br><br><a href="/">Return to User Page</a> | <a href="/logout">Log Out</a>
</div>