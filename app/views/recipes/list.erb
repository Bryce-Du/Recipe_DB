<div align="center">
    <% if @users_recipes.empty? %>
        <p>Looks like you don't have any recipes saved.</p>
    <% else %>
        <h2>Recipes:</h2>
        <ol>
            <% @users_recipes.each do |users_recipe| %>
                <% recipe = Recipe.find(users_recipe.recipe_id)%>
                <li>
                    <a href="/recipes/<%=recipe.id%>"><%=recipe.name%></a> | <a href="/recipes/<%=recipe.id%>/edit">Edit</a>
                    <form method="post" action="/recipes/<%= recipe.id %>">
                        <input id="hidden" type="hidden" name="_method" value="DELETE">
                        <input type="submit" value="Remove">
                    </form> 
                </li>
            <%end%>
        </ol>
    <%end%>
    <br><br><br><a href="recipes/new">Create New Recipe</a> | <a href="/recipes/browse">Browse All Recipes</a>
    <br><br><a href="/">Return to User Page</a> | <a href="/logout">Log Out</a>
</div>